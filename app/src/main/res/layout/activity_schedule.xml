<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myColorOneBody"
    tools:context="com.vumobile.celeb.ui.ScheduleActivity">


    <include
        android:id="@+id/toolbar_schedule"
        layout="@layout/toolbar_schedule"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar_schedule"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.vumobile.utils.MyTextView
            android:text="Set Schedule Time"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:clickable="true"
            android:background="#fff"
            android:id="@+id/etDate"
            android:editable="false"
            android:focusable="false"
            android:hint="Set Date"
            android:layout_width="150dp"
            android:layout_height="50dp" />

        <EditText
            android:editable="false"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:id="@+id/etTime"
            android:hint="Set Time"
            android:layout_width="150dp"
            android:layout_height="50dp" />



        <com.vumobile.utils.MyTextView
            android:text="To"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:id="@+id/etToTime"
            android:hint="Set Time"
            android:layout_width="150dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnConfirmTime"
            android:background="@drawable/confirm"
            android:layout_width="150dp"
            android:layout_height="50dp" />

    </LinearLayout>


</RelativeLayout>
