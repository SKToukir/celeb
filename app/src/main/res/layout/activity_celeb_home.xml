<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <include
        layout="@layout/app_bar_celeb_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        app:itemTextColor="#fff"
        android:background="#0072bc"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_celeb_home">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:src="@drawable/home"
                android:layout_marginTop="200dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/nav_home"
                android:layout_width="200dp"
                android:layout_height="50dp" />

            <ImageView
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:src="@drawable/galleryy"
                android:layout_below="@+id/nav_home"
                android:layout_centerHorizontal="true"
                android:id="@+id/nav_gallery"
                android:layout_width="200dp"
                android:layout_height="50dp" />

            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/giftss"
                android:layout_below="@+id/nav_gallery"
                android:layout_centerHorizontal="true"
                android:id="@+id/nav_gifts"
                android:layout_width="200dp"
                android:layout_height="50dp" />

            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/schedule"
                android:layout_below="@+id/nav_gifts"
                android:layout_centerHorizontal="true"
                android:id="@+id/nav_schedule"
                android:layout_width="200dp"
                android:layout_height="50dp" />

            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/myposts"
                android:layout_below="@+id/nav_schedule"
                android:layout_centerHorizontal="true"
                android:id="@+id/nav_post"
                android:layout_width="200dp"
                android:layout_height="50dp" />
            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/logout"
                android:layout_below="@+id/nav_post"
                android:layout_centerHorizontal="true"
                android:id="@+id/nav_logout"
                android:layout_width="200dp"
                android:layout_height="50dp" />

        </RelativeLayout>




    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
