<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_margin="5dp"-->
    <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
    <!--android:id="@+id/card_view"-->
    <!--android:background="#fff"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="120dp"-->
    <!--card_view:cardCornerRadius="4dp">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:descendantFocusability="blocksDescendants">

                    <com.vumobile.celeb.Utils.RoundedImageView
                        android:id="@+id/fanImages"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/ic_man"
                        android:layout_gravity="center"

                        android:src="@drawable/ic_man" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/b"
                        android:scaleType="fitXY" />

                </FrameLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:gravity="center|left"
                android:orientation="vertical">

                <com.vumobile.utils.MyTextView
                    android:id="@+id/txtNames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sheikh Toukir"
                    android:textColor="#000"
                    android:textSize="20dp" />


                <com.vumobile.utils.MyTextView
                    android:id="@+id/txtfanRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedule Time"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <com.vumobile.utils.MyTextView
                    android:id="@+id/txtSceduleTimeFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From: March 10,9.20 PM"
                    android:textColor="#000" />

                <com.vumobile.utils.MyTextView
                    android:id="@+id/txtSceduleTimeTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To: March 10,9.20 PM"
                    android:textColor="#000" />

                <com.vumobile.utils.MyTextView
                    android:id="@+id/txtSceduleRequestType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="5dp"
        android:background="@color/white" />

    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>