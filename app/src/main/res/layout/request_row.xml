<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">




    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_margin="5dp"-->
        <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/card_view"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="150dp"-->
        <!--card_view:cardCornerRadius="4dp">-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:descendantFocusability="blocksDescendants">

                    <com.vumobile.celeb.Utils.RoundedImageView
                        android:id="@+id/fanImage"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/ic_man" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/b"
                        android:scaleType="fitXY" />

                </FrameLayout>

            </RelativeLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:gravity="center|left"
            android:orientation="vertical">

            <com.vumobile.utils.MyTextView
                android:id="@+id/txtfanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sheikh Toukir"
                android:textColor="#000"
                android:textSize="16sp" />


            <com.vumobile.utils.MyTextView
                android:id="@+id/txtfanRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Want's To Video Chat"
                android:textColor="#000"
                android:textSize="16sp" />


            <com.vumobile.utils.MyTextView
                android:id="@+id/txtRequestTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: March 10,9.20 PM"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnConfirm"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:src="@drawable/confirm" />

                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/deleted" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <View
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>