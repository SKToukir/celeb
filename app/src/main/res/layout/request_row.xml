<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_margin="5dp"-->
        <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/card_view"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="150dp"-->
        <!--card_view:cardCornerRadius="4dp">-->

    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.vumobile.celeb.Utils.RoundedImageView
                android:layout_marginTop="5dp"
                android:id="@+id/fanImage"
                android:src="@drawable/ic_man"
                android:layout_width="100dp"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center|left"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.vumobile.utils.MyTextView
                android:textColor="#000"
                android:id="@+id/txtfanName"
                android:textSize="20dp"
                android:text="Sheikh Toukir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <com.vumobile.utils.MyTextView
                android:textColor="#000"
                android:id="@+id/txtfanRequest"
                android:textSize="20dp"
                android:text="Want's To Video Chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <com.vumobile.utils.MyTextView
                android:textColor="#000"
                android:id="@+id/txtRequestTime"
                android:text="Time: March 10,9.20 PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center|left"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btnConfirm"
                    android:src="@drawable/confirm"
                    android:layout_width="80dp"
                    android:layout_height="50dp" />

                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/deleted"
                    android:layout_width="80dp"
                    android:layout_height="50dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>