<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayoutMessageList"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:descendantFocusability="blocksDescendants">

            <com.vumobile.celeb.Utils.RoundedImageView
                android:id="@+id/imageFan"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:foreground="@drawable/circular_image"
                android:src="@drawable/ic_man" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/b"
                android:scaleType="fitXY" />

        </FrameLayout>

        <com.vumobile.utils.MyTextView
            android:id="@+id/txtFanMessageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:text="SomeOne"
            android:textColor="#000"
            android:textSize="18sp" />

    </LinearLayout>
