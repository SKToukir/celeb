<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/myColorTwoHeader"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_parent"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff">

        <!-- app:menu="@menu/activity_parent_drawer" -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewHome"
                android:layout_width="198dp"
                android:layout_height="53dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/home" />

            <ImageView
                android:id="@+id/imageViewMyGallery"
                android:layout_width="198dp"
                android:layout_height="53dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/galleryy" />

            <ImageView
                android:id="@+id/imageViewSchedule"
                android:layout_width="198dp"
                android:layout_height="53dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/schedule" />

            <ImageView
                android:id="@+id/imageViewTransaction"
                android:layout_width="198dp"
                android:layout_height="53dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/menu_transaction" />

            <ImageView
                android:id="@+id/imageViewCredits"
                android:layout_width="198dp"
                android:layout_height="53dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/menu_credits" />

            <ImageView
                android:id="@+id/imageViewLogout"
                android:layout_width="198dp"
                android:layout_height="53dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:src="@drawable/logout" />

        </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
