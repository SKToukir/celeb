<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#DA50A6"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_parent"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff">

        <!-- app:menu="@menu/activity_parent_drawer" -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_home"
                android:layout_width="198dp"
                android:layout_height="53dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="200dp"
                android:background="#000000"
                android:src="@drawable/home" />

            <ImageView
                android:id="@+id/nav_gallery"
                android:layout_width="198dp"
                android:layout_height="53dp"
                android:layout_below="@+id/nav_home"
                android:layout_centerHorizontal="true"
                android:src="@drawable/galleryy" />

            <ImageView
                android:id="@+id/nav_gifts"
                android:layout_width="198dp"
                android:layout_height="53dp"
                android:layout_below="@+id/nav_gallery"
                android:layout_centerHorizontal="true"
                android:src="@drawable/giftss" />

            <ImageView
                android:id="@+id/nav_schedule"
                android:layout_width="198dp"
                android:layout_height="53dp"
                android:layout_below="@+id/nav_gifts"
                android:layout_centerHorizontal="true"
                android:src="@drawable/schedule" />

            <ImageView
                android:id="@+id/nav_schedul"
                android:layout_width="198dp"
                android:layout_height="53dp"
                android:layout_below="@+id/nav_schedule"
                android:layout_centerHorizontal="true"
                android:src="@drawable/myposts" />

        </RelativeLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
