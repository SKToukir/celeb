<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myColorOneBody"
    tools:context=".ui.SetScheduleActivity">


    <include
        android:id="@+id/toolbar_liveSchedule"
        layout="@layout/tool_bar_live_schedule" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_schedule"
        android:gravity="center"
        android:orientation="vertical">

        <com.vumobile.utils.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Schedule Time"
            android:textColor="#fff"
            android:textSize="25sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etDateLive"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="#fff"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_calendar"
            android:focusable="false"
            android:gravity="center"
            android:hint="Set Date"
            android:inputType="date"
            android:padding="2dp" />

        <EditText
            android:id="@+id/etTimeLive"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_clock"
            android:focusable="false"
            android:gravity="center"
            android:hint="Set Time"
            android:inputType="time"
            android:padding="2dp" />


        <Button
            android:id="@+id/btnConfirmTimeLive"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="12dp"
            android:background="@drawable/confirm" />

    </LinearLayout>


</RelativeLayout>
