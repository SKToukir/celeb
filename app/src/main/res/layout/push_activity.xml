<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainlayoutCustom"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutCustom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/notifiation_image"
        android:background="#fff"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_gravity="center"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dp"
            android:background="#fff"
            android:gravity="left|center"
            android:maxLines="4"
            android:text="Test"
            android:textColor="#0e0e0e"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notificationTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:layout_weight="24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/IconDownload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutCustom"
        android:background="@color/myColorTwoHeader"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageViewTest"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/ic_launcher" />

    </LinearLayout>


    <TextView
        android:id="@+id/NotifibtnDownload"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="215dp"
        android:background="#bb000000"
        android:fontFamily="arial"
        android:gravity="center"
        android:text="Show"
        android:textSize="22sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/notifiation_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:visibility="gone" />

</RelativeLayout>